@model CoreMultiTenancy.Identity.ViewModels.Settings.SettingsProfileViewModel
@{
    Layout = "~/Views/Shared/_AccountSettingsLayout.cshtml";
    ViewData["Title"] = "Account - Profile";
}
<div class="panel-acct-contents">
    <div class="acct-form">
        <h3>Profile Details</h3>
        <hr />
        <div>
            <form asp-controller="settings" asp-action="profile" method="post">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
        </div>
    </div>
</div>