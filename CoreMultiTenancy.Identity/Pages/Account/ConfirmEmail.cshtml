@page
@model ConfirmEmailModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Confirm Email";
}
<div class="row m-0 panel-content shadow-sm">
    <div class="col-sm-12 login-title">
        Confirm Email
        <hr />
    </div>
    <div class="p-2">
        @* ViewData validation message *@
        @if (this.ValidationMessageViewDataExists()) {
            <div class="col-sm-12 pb-4">
                @await Html.PartialAsync("_ValidationMessagePartial", ViewData)
            </div>
        }
        <div class="mb-1 text-center">
            <a asp-page="/account/login">Return to sign in.</a>
        </div>
    </div>
</div>