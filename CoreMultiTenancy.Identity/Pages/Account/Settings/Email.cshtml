@page
@model EmailModel
@{
    Layout = "~/Views/Shared/_AccountSettingsLayout.cshtml";
    ViewData["Title"] = "Account - Email";
}
<div class="panel-acct-contents">
    <div class="acct-form">
        <h3>Email Details</h3>
        <hr />
        <div>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.CurrentEmail"></label>
                    <input asp-for="Input.CurrentEmail" readonly class="form-control-plaintext" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewEmail"></label>
                    <input asp-for="Input.NewEmail" class="form-control" />
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update Email</button>
            </form>
        </div>
    </div>
</div>