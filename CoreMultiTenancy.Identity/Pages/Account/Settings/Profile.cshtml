@page
@model ProfileModel
@{
    Layout = "~/Pages/Shared/_AccountSettingsLayout.cshtml";
    ViewData["Title"] = "Account - Profile";
}
<div class="panel-acct-contents">
    <div class="acct-form">
        <h3>Profile Details</h3>
        <hr />
        <div>
            <form method="post">
                <div class="form-group row pb-2">
                    <label asp-for="Input.FirstName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.FirstName" class="form-control" value="@Model.CurrentFirstName" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row pb-2">
                    <label asp-for="Input.LastName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.LastName" class="form-control" value="@Model.CurrentLastName" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
        </div>
    </div>
</div>